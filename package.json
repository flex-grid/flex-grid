{
  "name": "flex-grid",
  "version": "0.0.0",
  "description": "Flexible Table Grid Javascript Library",
  "main": "index.js",
  "repository": "git@github.com:flex-grid/flex-grid.git",
  "author": "Apurva Ojas <apurvaojas10@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "echo 'Running test'",
    "commit": "git-cz",
    "prebuild": "lerna exec --parallel rimraf dist && run-p tsc lint",
    "build": "webpack",
    "postbuild": "yarn build:declarations",
    "fix": "run-p -c 'lint:ts-* --fix'",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "lint:ts-prod": "tslint --config tslint.prod.json 'packages/**/*.ts{,x}'",
    "lint:ts-test": "tslint --config tslint.test.json 'packages/**/*.{test,story}.ts{,x}'",
    "lint:ts": "run-p -c lint:ts-*",
    "lint": "run-p -c lint:*",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "tsc": "tsc",
    "build:declarations": "lerna exec --parallel 'tsc --project ./tsconfig.build.json'"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/node": "^10.12.18",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.0.5",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "globby": "^9.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.10.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
